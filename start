#!/bin/bash
set -e

# Nome do serviÃ§o WordPress no docker-compose
WP_SERVICE="wordpress"

# Caminho padrÃ£o do WordPress no container
WP_PATH="/var/www/html"

wp_up() {
  docker-compose -f ./docker-compose.yml up -d --build --force-recreate  
}

# FunÃ§Ã£o para rodar WP-CLI dentro do container
wp_exec() {
  docker-compose -f ./docker-compose.yml exec -T $WP_SERVICE wp "$@" --path=$WP_PATH --allow-root
}

echo "ğŸš€ Iniciando o setup do Pay Crypto Me WooCommerce..."
wp_up

echo "â³ Verificando se o WordPress jÃ¡ estÃ¡ instalado..."
if ! wp_exec core is-installed >/dev/null 2>&1; then
  echo "âš™ï¸ Instalando WordPress..."
  until wp_exec core install \
    --url="http://localhost:8080" \
    --title="Pay Crypto Me" \
    --admin_user="admin" \
    --admin_password="admin123" \
    --admin_email="admin@example.com" \
    --skip-email \
    --allow-root \
    --path=/var/www/html; do
    echo "â³ nÃ£o instalado, aguardando 5s..."
    sleep 5
  done
else
  echo "âœ… WordPress jÃ¡ instalado."
fi

echo "ğŸ“¦ Instalando e ativando WooCommerce..."
wp_exec plugin install woocommerce --activate

echo "ğŸ¨ Instalando e ativando tema Storefront..."
wp_exec theme install storefront --activate

echo "âš™ï¸ Adicionando DISABLE_WP_CRON..."
wp_exec config set DISABLE_WP_CRON true --raw

echo "âœ… Setup completo!"
